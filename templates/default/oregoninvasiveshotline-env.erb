DJANGO_ENV=<%= @env %>

# Docker Configuration
DOCKER_IMAGE=ghcr.io/osu-cass/oregoninvasiveshotline:<%= @image %>
RABBITMQ_HOSTNAME=rabbitmq-<%= @env %>

# Application Port
APP_PORT=<%= @app_port %>

# Django Core Settings
DEBUG=false
TEMPLATE_DEBUG=false

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=<%= @allowed_hosts.join(',') %>

# Database Configuration
DB_ENGINE=django.contrib.gis.db.backends.postgis
DB_NAME=<%= @db_name %>
DB_USER=<%= @db_user %>
DB_HOST=<%= @db_host %>
DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@cass.oregonstate.edu
NOTIFICATIONS_FROM_EMAIL=no-reply@oregoninvasiveshotline.org

# SMTP Settings
EMAIL_HOST=smtp.osuosl.org

# Celery Configuration
CELERY_BROKER_URL=pyamqp://guest:guest@rabbitmq//
CELERY_TASK_ALWAYS_EAGER=false

# Static and Media Files
STATIC_ROOT=/static
MEDIA_ROOT=/media
STATICFILES_STORAGE=django.contrib.staticfiles.storage.ManifestStaticFilesStorage

# Security Settings
CSRF_COOKIE_HTTPONLY=true
CSRF_COOKIE_SECURE=true
SESSION_COOKIE_SECURE=true
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Google Analytics (use separate tracking ID for staging or leave empty)
GOOGLE_ANALYTICS_TRACKING_ID=<%= @google_analytics %>

# Sentry Configuration
SENTRY_DSN=<%= @sentry_dsn %>
SENTRY_ENVIRONMENT=<%= @env %>
SENTRY_TRACES_SAMPLE_RATE=<%= @sentry_sample_rate %>

VOLUME_PATH=<%= @volume_path %>

USER_ID=1000
